.container-fluid
    .row
        table#tablaGenerica.table.table-striped
            caption Usuarios
            thead
                tr
                    th Nombre completo
                    th DNI
                    th Email
                    th Rol
                    th Teléfono
                    th Dirección - Ciudad
                    th Nacimiento
                    th Estado
                    th Detalles
            tbody#tablaGenerica

#formularioUsuario.modal.fade(tabindex='-1' role='dialog')
    .modal-dialog(role='document')
        .modal-content
            .modal-header
                h5.modal-title Formulario Paciente
            .modal-body
                form#formularioUsuario
                    .form-group
                        input(type="hidden" id="idUsuario" value="")
                    .form-group
                        label(for="nombre") Nombre:
                        input.form-control(type="text" id="nombre" name="nombre", required)
                    .form-group
                        label(for="apellido") Apellido:
                        input.form-control(type="text" id="apellido" name="apellido", required)
                    .form-group
                        label(for="direccion") Dirección:
                        input.form-control(type="text" id="direccion" name="direccion")
                    .form-group
                        label(for="estado") Estado:
                        select.form-control(id="estado" name="estado")
                    .form-group
                        label(for="ciudad") Ciudad:
                        select.form-control(id="ciudad" name="ciudad")
                    .form-group
                        label(for="email") Email:
                        input.form-control(type="email" id="email" name="email")
                    .form-group
                        label(for="password") Contraseña:
                        input.form-control(type="password" id="password" name="password" minlength="8")
                    .form-group
                        label(for="password2") Confirmar Contraseña:
                        input.form-control(type="password" id="password2" name="password2" minlength="8")
                    .form-group
                        label(for="rol") Rol de usuario:
                        select.form-control(type="text" id="rol" name="rol")
                            option(value="administrador") Administrador
                            option(value="usuario") Usuario
                            option(value="tecnico") Tecnico
                            option(value="bioquimico") Bioquimico
                    .form-group
                        label(for="permiso") Nivel de acceso:
                        input.form-control(type="number" id="permiso" name="permiso" min=1 max=4)
                    .form-group
                        label(for="telefono") Teléfono:
                        input.form-control(type="number" id="telefono" name="telefono" min=0)
                    .form-group
                        label(for="nacimiento") Nacimiento:
                        input.form-control(type="date" id="nacimiento" name="nacimiento")
                    .form-group
                        label(for="dni") DNI:
                        input.form-control(type="number" id="dni" name="dni" min=0, required)
            .modal-footer
                button.btn.btn-primary(type="button" onclick="guardar_actualizarUsuario()") Guardar
                button.btn.btn-secondary(type="button" data-bs-dismiss="modal") Cerrar
