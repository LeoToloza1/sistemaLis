.container-fluid
    .row
        table#tablaGenerica.table.table-striped
            caption Tipos de muestra
            thead
                tr
                    th Nombre
                    th Creado por
                    th Detalles
            tbody#tablaGenerica

#formularioTiposMuestras.modal.fade(tabindex='-1' role='dialog')
    .modal-dialog(role='document')
        .modal-content
            .modal-header
                h5.modal-title Formulario Paciente
            .modal-body
                form#formularioTiposMuestras
                    .form-group
                        input(type="hidden" id="idTipoMuestra" value="")
                    .form-group
                        label(for="nombre") Nombre:
                        input.form-control(type="text" id="nombre" name="nombre", required)
                    .form-group
                        label(for="id_usuario") Usuario:
                        select.form-control(id="id_usuario" name="id_usuario")
            .modal-footer
                button.btn.btn-primary(type="button" onclick="guardar_actualizarTiposMuestra()") Guardar
                button.btn.btn-secondary(type="button" data-bs-dismiss="modal") Cerrar
