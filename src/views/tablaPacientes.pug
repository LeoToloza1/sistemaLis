.container-fluid
    .row
        table#tablaGenerica.table.table-striped
            caption Pacientes
            thead
                tr
                    th Nombre completo
                    th DNI
                    th Email
                    th Teléfono
                    th Dirección - Ciudad
                    th Nacimiento
                    th Detalles
            tbody#tablaGenerica

#modalPaciente.modal.fade(data-bs-backdrop="static" aria-hidden="false" aria-labelledby="modalPacienteLabel" tabindex='-1' role='dialog')
    .modal-dialog(role='document')
        .modal-content
            .modal-header
                h5.modal-title Formulario Paciente
            .modal-body
                form#formularioPaciente
                    .form-group
                        input(type="hidden" id="idPaciente" value="")
                    .form-group
                        label(for="nombre") Nombre:
                        input.form-control(type="text" id="nombre" name="nombre", required)
                    .form-group
                        label(for="apellido") Apellido:
                        input.form-control(type="text" id="apellido" name="apellido", required)
                    .form-group
                        label(for="direccion") Dirección:
                        input.form-control(type="text" id="direccion" name="direccion")
                    .form-group
                        label(for="ciudad") Ciudad:
                        select.form-control(id="ciudad" name="ciudad")
                    .form-group
                        label(for="email") Email:
                        input.form-control(type="email" id="email" name="email")    
                    .form-group
                        label(for="telefono") Teléfono:
                        input.form-control(type="number" id="telefono" name="telefono")
                    .form-group
                        label(for="nacimiento") Nacimiento:
                        input.form-control(type="date" id="nacimiento" name="nacimiento")
                    .form-group
                        label(for="dni") DNI:
                        input.form-control(type="number" id="dni" name="dni", required)
            .modal-footer
                button.btn.btn-primary(type="button" onclick="guardar_actualizarPaciente()") Guardar
                button.btn.btn-secondary(type="button" data-bs-dismiss="modal") Cerrar
